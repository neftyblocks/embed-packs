{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": ["playground", "dist"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120,

        "ignore": ["playground", "dist"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
